<!DOCTYPE html>
<html>
  <head>
    <title>Evenbrite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="<%=static_pages_index_path %>">Eventbrite</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link active" href="<%=static_pages_index_path%>">Home <span class="sr-only">(current)</span></a>
          <a class="nav-item nav-link" href="<%=%>">Event</a>
          <a class="nav-item nav-link" href="<%=user_session_path %>">Mon profil</a>
          <a class="nav-item nav-link" href="<%=new_user_registration_path %>">S'incrire</a>
          <a class="nav-item nav-link" href="<%=new_user_session_path %>">Se connecter</a>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-sm btn-danger my-1 mr-2', role:'button' %>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
